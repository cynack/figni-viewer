{
  "plugin": ["stylelint-scss", "stylelint-order"],
  "extends": [
    "stylelint-config-recommended-scss",
    "stylelint-prettier/recommended"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "function",
          "if",
          "for",
          "each",
          "include",
          "mixin",
          "content"
        ]
      }
    ],
    "order/properties-alphabetical-order": true
  },
  "ignoreFiles": ["**/node_modules/**"]
}
